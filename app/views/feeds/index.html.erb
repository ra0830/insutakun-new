<h1>Instakun</h1>
<%= csrf_meta_tags %>
<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td>
          <h5>投稿者：<%= feed.user.name %></h5>
          <%= image_tag feed.image,size:150 %>
        </td>
          <%#= feed.image %>
        <td>・<%= link_to 'Show', feed, class: 'btn btn-success btn-sm' %></td>
        <td>・<%= link_to 'Edit', edit_feed_path(feed), class: 'btn btn-success btn-sm' %></td>
        <td>・<%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-success btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

・<%= link_to '新規投稿', new_feed_path, class: 'btn btn-success btn-sm' %>
